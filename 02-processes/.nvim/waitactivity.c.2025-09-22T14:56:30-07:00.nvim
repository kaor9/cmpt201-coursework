#include <stdio.h>
#include <stdlib.h>
#include <sys/wait.h>
#include <unistd.h>

int main() {

  pid_t pid = fork();
  int wstatus = 0;

  if (pid == 0) {
    execl("/bin/ls", "/bin/ls", "-al", NULL);
  } else {
    if (waitpid(pid, &wstatus, 0) == -1) {
      perror("waitpid");
      exit(EXIT_FAILURE);
    }
  }

  printf("%d\n", wstatus);

  return 0;
}
