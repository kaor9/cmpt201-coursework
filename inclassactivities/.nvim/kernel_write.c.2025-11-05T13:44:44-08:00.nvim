#include <fcntl.h>
#include <stdbool.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/stat.h>
#include <unistd.h>

int main () {
  int fd = open("tmp", O_RDWR | O_CREAT | O_TRUNC, S_IRUSR | S_IWUSR);

  char *msg = "Hello, hope this works well!\n";

  while (true) { 
    sleep(10);
    int res = write(fd, msg, strlen(msg));
  }
}

